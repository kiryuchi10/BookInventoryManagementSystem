<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.BookRepository">

    <!-- Insert operation -->
    <insert id="insertBook" parameterType="com.example.demo.model.Book">
        INSERT INTO books (title, author, price, stock, created_at)
        VALUES (#{title}, #{author}, #{price}, #{stock}, #{createdAt})
    </insert>

    <!-- Update operation -->
    <update id="updateBook" parameterType="com.example.demo.model.Book">
        UPDATE books SET
            title = #{title},
            author = #{author},
            price = #{price},
            stock = #{stock}
        WHERE book_id = #{bookId}
    </update>

    <!-- Delete operation -->
    <delete id="deleteBook" parameterType="java.lang.Long">
        DELETE FROM books WHERE book_id = #{id}
    </delete>

    <!-- Select all operation -->
    <select id="getAllBooks" resultType="com.example.demo.model.Book">
        SELECT * FROM books
    </select>

    <!-- Select by ID operation -->
    <select id="getBookById" parameterType="java.lang.Long" resultType="com.example.demo.model.Book">
        SELECT * FROM books WHERE book_id = #{id}
    </select>

</mapper>